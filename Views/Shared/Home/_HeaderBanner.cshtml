@using PlasticCompany.Common;
@{ 
    var bannersList = ViewBag.Banner as List<PlasticCompanyVersion2WebApp.Models.Image>;
    var banner1 = bannersList.Where(x => x.Name == "Banner1").FirstOrDefault();
    var banner2 = bannersList.Where(x => x.Name == "Banner2").FirstOrDefault();
    var banner3 = bannersList.Where(x => x.Name == "Banner3").FirstOrDefault();
 }
<!-- slider-area-start -->
<div class="slider-area">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @if (banner1 != null)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="Images/Other/Banners/@banner1.Source" alt="First slide">
                </div>
            }
            @if (banner2 != null)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="Images/Other/Banners/@banner2.Source" alt="Second slide">
                </div>
            }
            @if (banner3 != null)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="Images/Other/Banners/@banner3.Source" alt="Third slide">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>    
</div>
<!-- slider-area-end -->